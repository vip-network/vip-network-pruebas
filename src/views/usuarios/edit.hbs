<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/usuarios/edit/{{usuarios.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" placeholder="Nombre Usuario" value="{{usuarios.nombre}}" autofocus required>
                        </div>
                        <div class="form-group">
                           <input type="text" class="form-control" name="pass" placeholder="ContraseÃ±a" value="{{usuarios.pass}}"autofocus required>
                        </div>
                        <div class="form-group">
                           <input type="email" class="form-control" name="correo" placeholder="Correo" value="{{usuarios.correo}}"autofocus required>
                        </div>
                        <div class="form-group">
                           <select name="tipo_usuario" class="form-control" > 
                                {{#ifCond usuarios.tipo_usuario 'admin'}}   
                                    <option value="admin">Administrador</option> 
                                    <option value="user">Usuario</option> 
                                {{else}} 
                                    <option value="user">Usuario</option>
                                    <option value="admin">Administrador</option>   
                                {{/ifCond}}                               
                           </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger btn-block" type="button" onclick = location="/usuarios/">
                                Cancelar
                            </button>                             
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>